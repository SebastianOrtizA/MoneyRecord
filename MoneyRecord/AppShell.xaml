<?xml version="1.0" encoding="UTF-8" ?>
<Shell
    x:Class="MoneyRecord.AppShell"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:views="clr-namespace:MoneyRecord.Views"
    Title="MoneyRecord"
    FlyoutBehavior="Flyout">

    <FlyoutItem Title="Home" Icon="home">
        <ShellContent
            Title="Home"
            ContentTemplate="{DataTemplate views:MainPage}"
            Route="MainPage" />
    </FlyoutItem>

    <FlyoutItem Title="Expense Report" Icon="chart">
        <ShellContent
            Title="Expense Report"
            ContentTemplate="{DataTemplate views:ExpenseReportPage}"
            Route="ExpenseReportPage" />
    </FlyoutItem>

    <FlyoutItem Title="Income Report" Icon="chart">
        <ShellContent
            Title="Income Report"
            ContentTemplate="{DataTemplate views:IncomeReportPage}"
            Route="IncomeReportPage" />
    </FlyoutItem>

    <FlyoutItem Title="Transfers" Icon="swap">
        <ShellContent
            Title="Transfers"
            ContentTemplate="{DataTemplate views:TransfersPage}"
            Route="TransfersPage" />
    </FlyoutItem>

    <FlyoutItem Title="Manage Accounts" Icon="wallet">
        <ShellContent
            Title="Accounts"
            ContentTemplate="{DataTemplate views:ManageAccountsPage}"
            Route="ManageAccounts" />
    </FlyoutItem>

    <FlyoutItem Title="Manage Categories" Icon="folder">
        <ShellContent
            Title="Income Categories"
            ContentTemplate="{DataTemplate views:ManageCategoriesPage}"
            Route="ManageIncomeCategories" />
        <ShellContent
            Title="Expense Categories"
            ContentTemplate="{DataTemplate views:ManageCategoriesPage}"
            Route="ManageExpenseCategories" />
    </FlyoutItem>

</Shell>
