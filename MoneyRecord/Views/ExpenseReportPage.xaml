<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MoneyRecord.ViewModels"
             xmlns:models="clr-namespace:MoneyRecord.Models"
             x:Class="MoneyRecord.Views.ExpenseReportPage"
             x:DataType="viewmodels:ExpenseReportViewModel"
             Title="Expense Report">

    <RefreshView IsRefreshing="{Binding IsLoading}"
                 Command="{Binding LoadReportDataCommand}">
        <ScrollView>
            <VerticalStackLayout Padding="16,12" Spacing="16">

                <!-- Period Filter Section -->
                <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}" 
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#3A3A3A}"
                       CornerRadius="12"
                       Padding="16"
                       HasShadow="True">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="ðŸ“Š Expense Analysis" 
                               FontSize="20" 
                               FontAttributes="Bold"
                               HorizontalOptions="Start"/>

                        <Label Text="Identify your most used expense categories" 
                               FontSize="14"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                               HorizontalOptions="Start"/>

                        <!-- Period Selector -->
                        <Picker ItemsSource="{Binding Periods}"
                                SelectedItem="{Binding SelectedPeriod}"
                                Title="Select Period"
                                FontSize="16"
                                MinimumHeightRequest="44"
                                HorizontalOptions="FillAndExpand"
                                BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"/>

                        <!-- Custom Date Range Selector -->
                        <VerticalStackLayout Spacing="12" 
                                            IsVisible="{Binding IsCustomPeriodSelected}">
                            <Grid ColumnDefinitions="Auto,*" 
                                  RowDefinitions="Auto,Auto"
                                  ColumnSpacing="12"
                                  RowSpacing="12">
                                
                                <Label Grid.Row="0" Grid.Column="0"
                                       Text="From:" 
                                       FontSize="16"
                                       VerticalOptions="Center"
                                       MinimumWidthRequest="50"/>
                                <DatePicker Grid.Row="0" Grid.Column="1"
                                           Date="{Binding CustomStartDate}"
                                           Format="MMM dd, yyyy"
                                           FontSize="16"
                                           MinimumHeightRequest="44"
                                           HorizontalOptions="FillAndExpand"
                                           BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"/>
                                
                                <Label Grid.Row="1" Grid.Column="0"
                                       Text="To:" 
                                       FontSize="16"
                                       VerticalOptions="Center"
                                       MinimumWidthRequest="50"/>
                                <DatePicker Grid.Row="1" Grid.Column="1"
                                           Date="{Binding CustomEndDate}"
                                           Format="MMM dd, yyyy"
                                           FontSize="16"
                                           MinimumHeightRequest="44"
                                           HorizontalOptions="FillAndExpand"
                                           BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"/>
                            </Grid>
                        </VerticalStackLayout>

                        <!-- Total Expenses Display -->
                        <Frame BackgroundColor="{AppThemeBinding Light=#FFEBEE, Dark=#B71C1C}" 
                               BorderColor="{AppThemeBinding Light=#F44336, Dark=#EF5350}"
                               CornerRadius="8"
                               Padding="12"
                               HasShadow="False"
                               IsVisible="{Binding HasData}">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Total Expenses" 
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light=#C62828, Dark=#FFCDD2}"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding TotalExpenses, StringFormat='${0:N2}'}" 
                                       FontSize="28"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#D32F2F, Dark=#EF5350}"/>
                            </VerticalStackLayout>
                        </Frame>
                    </VerticalStackLayout>
                </Frame>

                <!-- Empty State -->
                <VerticalStackLayout Padding="40" 
                                    Spacing="12" 
                                    HorizontalOptions="Center"
                                    IsVisible="{Binding HasData, Converter={StaticResource InvertedBoolConverter}}">
                    <Label Text="ðŸ“Š" 
                           FontSize="48" 
                           HorizontalOptions="Center"/>
                    <Label Text="No expense data found" 
                           FontSize="18"
                           FontAttributes="Bold"
                           HorizontalOptions="Center"
                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    <Label Text="Add some expense transactions to see your spending analysis" 
                           FontSize="14"
                           HorizontalOptions="Center"
                           HorizontalTextAlignment="Center"
                           TextColor="{AppThemeBinding Light=#999999, Dark=#888888}"/>
                </VerticalStackLayout>

                <!-- Heatmap Section -->
                <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}" 
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#3A3A3A}"
                       CornerRadius="12"
                       Padding="16"
                       HasShadow="True"
                       IsVisible="{Binding HasData}">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="ðŸ”¥ Expense Heatmap" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               HorizontalOptions="Start"/>

                        <Label Text="All expense categories by percentage" 
                               FontSize="12"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                               HorizontalOptions="Start"/>

                        <!-- Heatmap Grid - 3 columns -->
                        <CollectionView ItemsSource="{Binding HeatmapCells}"
                                       SelectionMode="Single"
                                       SelectionChangedCommand="{Binding ShowCategoryDetailsFromHeatmapCommand}"
                                       SelectionChangedCommandParameter="{Binding SelectedItem, Source={RelativeSource Self}}">
                            <CollectionView.ItemsLayout>
                                <GridItemsLayout Orientation="Vertical" 
                                                Span="3"
                                                HorizontalItemSpacing="8"
                                                VerticalItemSpacing="8"/>
                            </CollectionView.ItemsLayout>
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:HeatmapCell">
                                    <Frame BackgroundColor="{Binding BackgroundColor}"
                                           CornerRadius="8"
                                           Padding="8"
                                           HasShadow="False"
                                           HeightRequest="90">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ExpenseReportViewModel}}, Path=ShowCategoryDetailsFromHeatmapCommand}"
                                                CommandParameter="{Binding .}"/>
                                        </Frame.GestureRecognizers>
                                        <VerticalStackLayout Spacing="2" 
                                                            VerticalOptions="Center"
                                                            HorizontalOptions="Center">
                                            <Label Text="{Binding DisplayIcon}" 
                                                   FontFamily="MaterialDesignIcons"
                                                   FontSize="22"
                                                   TextColor="{Binding TextColor}"
                                                   HorizontalOptions="Center"/>
                                            <Label Text="{Binding CategoryName}"
                                                   FontSize="11"
                                                   FontAttributes="Bold"
                                                   TextColor="{Binding TextColor}"
                                                   HorizontalOptions="Center"
                                                   HorizontalTextAlignment="Center"
                                                   LineBreakMode="TailTruncation"
                                                   MaxLines="1"/>
                                            <Label Text="{Binding PercentageText}"
                                                   FontSize="14"
                                                   FontAttributes="Bold"
                                                   TextColor="{Binding TextColor}"
                                                   HorizontalOptions="Center"/>
                                        </VerticalStackLayout>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>

                        <!-- Legend -->
                        <HorizontalStackLayout Spacing="8" 
                                              HorizontalOptions="Center"
                                              Margin="0,8,0,0">
                            <Frame BackgroundColor="#E3F2FD" 
                                   CornerRadius="4" 
                                   Padding="8,4" 
                                   HasShadow="False">
                                <Label Text="Low" FontSize="10" TextColor="Black"/>
                            </Frame>
                            <Label Text="â†’" 
                                   FontSize="14" 
                                   VerticalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                            <Frame BackgroundColor="#FFF176" 
                                   CornerRadius="4" 
                                   Padding="8,4" 
                                   HasShadow="False">
                                <Label Text="Medium" FontSize="10" TextColor="Black"/>
                            </Frame>
                            <Label Text="â†’" 
                                   FontSize="14" 
                                   VerticalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                            <Frame BackgroundColor="#EF5350" 
                                   CornerRadius="4" 
                                   Padding="8,4" 
                                   HasShadow="False">
                                <Label Text="High" FontSize="10" TextColor="White"/>
                            </Frame>
                        </HorizontalStackLayout>
                    </VerticalStackLayout>
                </Frame>

                <!-- Category Details Section -->
                <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}" 
                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#3A3A3A}"
                       CornerRadius="12"
                       Padding="16"
                       HasShadow="True"
                       IsVisible="{Binding HasData}">
                    <VerticalStackLayout Spacing="12">
                        <Label Text="ðŸ“‹ Category Details" 
                               FontSize="18" 
                               FontAttributes="Bold"
                               HorizontalOptions="Start"/>

                        <CollectionView ItemsSource="{Binding CategoryDetails}">
                            <CollectionView.ItemTemplate>
                                <DataTemplate x:DataType="models:CategoryExpenseData">
                                    <Frame Margin="0,4" 
                                           Padding="12"
                                           BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                                           BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#252525}"
                                           CornerRadius="8"
                                           HasShadow="False">
                                        <Frame.GestureRecognizers>
                                            <TapGestureRecognizer 
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ExpenseReportViewModel}}, Path=ShowCategoryDetailsFromListCommand}"
                                                CommandParameter="{Binding .}"/>
                                        </Frame.GestureRecognizers>
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto" 
                                              ColumnSpacing="12">
                                            
                                            <!-- Color indicator -->
                                            <BoxView Grid.Column="0"
                                                     WidthRequest="4"
                                                     HeightRequest="40"
                                                     CornerRadius="2"
                                                     BackgroundColor="{Binding HeatmapColor}"
                                                     VerticalOptions="Center"/>

                                            <!-- Category Icon and Name -->
                                            <HorizontalStackLayout Grid.Column="1" 
                                                                  Spacing="8"
                                                                  VerticalOptions="Center">
                                                <Label Text="{Binding DisplayIcon}" 
                                                       FontFamily="MaterialDesignIcons"
                                                       FontSize="20"
                                                       TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"
                                                       VerticalOptions="Center"/>
                                                <VerticalStackLayout Spacing="2">
                                                    <Label Text="{Binding CategoryName}"
                                                           FontSize="15"
                                                           FontAttributes="Bold"
                                                           LineBreakMode="TailTruncation"/>
                                                    <HorizontalStackLayout Spacing="4">
                                                        <Label Text="{Binding Amount, StringFormat='${0:N2}'}"
                                                               FontSize="12"
                                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                                        <Label Text="â€¢ Tap for details"
                                                               FontSize="10"
                                                               TextColor="{AppThemeBinding Light=#999999, Dark=#777777}"/>
                                                    </HorizontalStackLayout>
                                                </VerticalStackLayout>
                                            </HorizontalStackLayout>

                                            <!-- Others Badge -->
                                            <Frame Grid.Column="2"
                                                   BackgroundColor="{AppThemeBinding Light=#FFF3E0, Dark=#E65100}"
                                                   BorderColor="Transparent"
                                                   CornerRadius="10"
                                                   Padding="8,4"
                                                   HasShadow="False"
                                                   VerticalOptions="Center"
                                                   IsVisible="{Binding IsOthersGroup}">
                                                <Label Text="&lt;10%" 
                                                       FontSize="10"
                                                       TextColor="{AppThemeBinding Light=#E65100, Dark=#FFE0B2}"/>
                                            </Frame>

                                            <!-- Percentage -->
                                            <Label Grid.Column="3"
                                                   Text="{Binding Percentage, StringFormat='{0:F1}%'}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Center"
                                                   TextColor="{AppThemeBinding Light=#D32F2F, Dark=#EF5350}"/>
                                        </Grid>
                                    </Frame>
                                </DataTemplate>
                            </CollectionView.ItemTemplate>
                        </CollectionView>
                    </VerticalStackLayout>
                </Frame>

            </VerticalStackLayout>
        </ScrollView>
    </RefreshView>
</ContentPage>
