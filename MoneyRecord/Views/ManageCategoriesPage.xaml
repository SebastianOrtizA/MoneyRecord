<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MoneyRecord.ViewModels"
             xmlns:models="clr-namespace:MoneyRecord.Models"
             xmlns:converters="clr-namespace:MoneyRecord.Converters"
             xmlns:ext="clr-namespace:MoneyRecord.Extensions"
             xmlns:controls="clr-namespace:MoneyRecord.Controls"
             x:Class="MoneyRecord.Views.ManageCategoriesPage"
             x:DataType="viewmodels:ManageCategoriesViewModel"
             Title="{Binding Title}">

    <Grid>
        <ScrollView>
            <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Add Category Section -->
            <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}" 
                   BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                   CornerRadius="12"
                   Padding="16"
                   IsVisible="{Binding IsEditMode, Converter={StaticResource InvertedBoolConverter}}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="{ext:Localize AddNewCategory}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
                    
                    <Entry Text="{Binding NewCategoryName}" 
                           Placeholder="{ext:Localize CategoryName}"
                           PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#888888}"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                           BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                           FontSize="16"/>

                    <!-- Icon Selector for Add -->
                    <Label Text="{ext:Localize SelectIcon}" 
                           FontSize="14" 
                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                           Margin="0,4,0,0"/>
                    <FlexLayout Wrap="Wrap" 
                                JustifyContent="Start" 
                                AlignItems="Center"
                                BindableLayout.ItemsSource="{Binding AvailableIcons}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:CategoryIcon">
                                <Border StrokeThickness="3"
                                        Padding="10"
                                        Margin="4"
                                        WidthRequest="52"
                                        HeightRequest="52"
                                        StrokeShape="RoundRectangle 10">
                                    <Border.Stroke>
                                        <SolidColorBrush Color="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"/>
                                    </Border.Stroke>
                                    <Border.BackgroundColor>
                                        <Binding Path="IsSelected">
                                            <Binding.Converter>
                                                <converters:BoolToSelectedBackgroundConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Border.BackgroundColor>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ManageCategoriesViewModel}}, Path=SelectNewIconCommand}"
                                            CommandParameter="{Binding Code}"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="{Binding DisplayIcon}"
                                           FontFamily="MaterialDesignIcons"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           TextColor="{Binding IsSelected, Converter={StaticResource BoolToIconColorConverter}}"/>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                    
                    <Button Text="{ext:Localize AddCategoryButton}" 
                           Command="{Binding AddCategoryCommand}"
                           HeightRequest="44"
                           CornerRadius="8"
                           FontSize="16"
                           BackgroundColor="{AppThemeBinding Light=#2E7D32, Dark=#66BB6A}"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Edit Category Section -->
            <Frame BackgroundColor="{AppThemeBinding Light=#FFF8E1, Dark=#3D3D1F}" 
                   BorderColor="{AppThemeBinding Light=#FFD54F, Dark=#FFD54F}"
                   CornerRadius="12"
                   Padding="16"
                   IsVisible="{Binding IsEditMode}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="{ext:Localize EditCategory}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#F57F17, Dark=#FFD54F}"/>
                    
                    <Entry Text="{Binding EditCategoryName}" 
                           Placeholder="{ext:Localize CategoryName}"
                           PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#888888}"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                           BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                           FontSize="16"/>

                    <!-- Icon Selector for Edit -->
                    <Label Text="{ext:Localize SelectIcon}" 
                           FontSize="14" 
                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                           Margin="0,4,0,0"/>
                    <FlexLayout Wrap="Wrap" 
                                JustifyContent="Start" 
                                AlignItems="Center"
                                BindableLayout.ItemsSource="{Binding AvailableIcons}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:CategoryIcon">
                                <Border StrokeThickness="3"
                                        Padding="10"
                                        Margin="4"
                                        WidthRequest="52"
                                        HeightRequest="52"
                                        StrokeShape="RoundRectangle 10">
                                    <Border.Stroke>
                                        <SolidColorBrush Color="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"/>
                                    </Border.Stroke>
                                    <Border.BackgroundColor>
                                        <Binding Path="IsSelected">
                                            <Binding.Converter>
                                                <converters:BoolToSelectedBackgroundConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Border.BackgroundColor>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ManageCategoriesViewModel}}, Path=SelectEditIconCommand}"
                                            CommandParameter="{Binding Code}"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="{Binding DisplayIcon}"
                                           FontFamily="MaterialDesignIcons"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           TextColor="{Binding IsSelected, Converter={StaticResource BoolToIconColorConverter}}"/>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0"
                               Text="{ext:Localize Cancel}" 
                               Command="{Binding CancelEditCommand}"
                               HeightRequest="44"
                               CornerRadius="8"
                               FontSize="16"
                               BackgroundColor="{AppThemeBinding Light=#757575, Dark=#616161}"
                               TextColor="White"/>
                        <Button Grid.Column="1"
                               Text="{ext:Localize Save}" 
                               Command="{Binding SaveEditCommand}"
                               HeightRequest="44"
                               CornerRadius="8"
                               FontSize="16"
                               BackgroundColor="{AppThemeBinding Light=#2E7D32, Dark=#66BB6A}"
                               TextColor="White"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Categories List Header -->
            <Label Text="{ext:Localize Categories}" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
            
            <!-- Categories List -->
            <CollectionView ItemsSource="{Binding Categories}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="40" Spacing="12" HorizontalOptions="Center">
                        <Label Text="ðŸ“" 
                               FontSize="48" 
                               HorizontalOptions="Center"/>
                        <Label Text="{ext:Localize NoCategoriesYet}" 
                               FontSize="16"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Category">
                        <Frame Margin="0,6" 
                               Padding="16"
                               BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                               BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                               CornerRadius="10"
                               HasShadow="False">
                            <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
                                <!-- Category Icon -->
                                <Label Grid.Column="0"
                                       Text="{Binding DisplayIcon}"
                                       FontFamily="MaterialDesignIcons"
                                       FontSize="24"
                                       VerticalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"/>
                                
                                <Label Grid.Column="1"
                                       Text="{Binding Name}" 
                                       FontSize="16"
                                       TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                                       VerticalOptions="Center"/>
                                
                                <Button Grid.Column="2"
                                        Text="{ext:Localize EditButton}"
                                        FontSize="13"
                                        HeightRequest="36"
                                        Padding="12,0"
                                        BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                        TextColor="White"
                                        CornerRadius="6"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ManageCategoriesViewModel}}, Path=EditCategoryCommand}"
                                        CommandParameter="{Binding .}"/>
                                
                                <Button Grid.Column="3"
                                        Text="{ext:Localize DeleteButton}"
                                        FontSize="13"
                                        HeightRequest="36"
                                        Padding="12,0"
                                        BackgroundColor="{AppThemeBinding Light=#D32F2F, Dark=#EF5350}"
                                        TextColor="White"
                                        CornerRadius="6"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ManageCategoriesViewModel}}, Path=DeleteCategoryCommand}"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

            </VerticalStackLayout>
        </ScrollView>

        <!-- Floating Action Menu -->
        <controls:FloatingActionMenu />
    </Grid>

</ContentPage>
