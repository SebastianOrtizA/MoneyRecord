<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MoneyRecord.ViewModels"
             xmlns:models="clr-namespace:MoneyRecord.Models"
             x:Class="MoneyRecord.Views.MainPage"
             x:DataType="viewmodels:MainViewModel"
             Title="Money Record">

    <RefreshView IsRefreshing="{Binding IsRefreshing}"
                 Command="{Binding LoadDataCommand}">
        <ScrollView>
            <VerticalStackLayout Padding="16,12" Spacing="16">
            
            
            <!-- Summary Section -->
            <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}" 
                   BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#3A3A3A}"
                   CornerRadius="12"
                   Padding="16"
                   HasShadow="True">
                <VerticalStackLayout Spacing="12">
                    <Label Text="Summary" 
                           FontSize="20" 
                           FontAttributes="Bold"
                           HorizontalOptions="Start"
                           Margin="0,0,0,4"/>
                    
                    <Label Text="{Binding CurrentDate, StringFormat='{0:MMMM dd, yyyy}'}" 
                           FontSize="14"
                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                           HorizontalOptions="Start"/>

                    <!-- Period Selector -->
                    <Picker ItemsSource="{Binding Periods}"
                            SelectedItem="{Binding SelectedPeriod}"
                            Title="Select Period"
                            FontSize="16"
                            MinimumHeightRequest="44"
                            HorizontalOptions="FillAndExpand"
                            BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"/>

                    <!-- Custom Date Range Selector -->
                    <VerticalStackLayout Spacing="12" 
                                        IsVisible="{Binding IsCustomPeriodSelected}">
                        <Grid ColumnDefinitions="Auto,*" 
                              RowDefinitions="Auto,Auto"
                              ColumnSpacing="12"
                              RowSpacing="12">
                            
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="From:" 
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   MinimumWidthRequest="50"/>
                            <DatePicker Grid.Row="0" Grid.Column="1"
                                       Date="{Binding CustomStartDate}"
                                       Format="MMM dd, yyyy"
                                       FontSize="16"
                                       MinimumHeightRequest="44"
                                       HorizontalOptions="FillAndExpand"
                                       BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"/>
                            
                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="To:" 
                                   FontSize="16"
                                   VerticalOptions="Center"
                                   MinimumWidthRequest="50"/>
                            <DatePicker Grid.Row="1" Grid.Column="1"
                                       Date="{Binding CustomEndDate}"
                                       Format="MMM dd, yyyy"
                                       FontSize="16"
                                       MinimumHeightRequest="44"
                                       HorizontalOptions="FillAndExpand"
                                       BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"/>
                        </Grid>
                    </VerticalStackLayout>

                    <!-- Balance Display - Responsive Grid -->
                    <VerticalStackLayout Spacing="12" Margin="0,8,0,0">
                        <!-- Balance Card -->
                        <Frame BackgroundColor="{AppThemeBinding Light=#E8F5E9, Dark=#1B5E20}" 
                               BorderColor="{AppThemeBinding Light=#4CAF50, Dark=#66BB6A}"
                               CornerRadius="8"
                               Padding="12"
                               HasShadow="False">
                            <VerticalStackLayout Spacing="4">
                                <Label Text="Balance" 
                                       FontSize="14"
                                       TextColor="{AppThemeBinding Light=#2E7D32, Dark=#A5D6A7}"
                                       HorizontalOptions="Center"/>
                                <Label Text="{Binding CurrentBalance, StringFormat='${0:N2}'}" 
                                       FontSize="28"
                                       FontAttributes="Bold"
                                       HorizontalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#1B5E20, Dark=#81C784}"/>
                            </VerticalStackLayout>
                        </Frame>

                        <!-- Incomes and Expenses Row -->
                        <Grid ColumnDefinitions="*,*" ColumnSpacing="8">
                            <!-- Incomes Card -->
                            <Frame Grid.Column="0"
                                   BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#0D47A1}" 
                                   BorderColor="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}"
                                   CornerRadius="8"
                                   Padding="12"
                                   HasShadow="False">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="Incomes" 
                                           FontSize="13"
                                           TextColor="{AppThemeBinding Light=#1565C0, Dark=#90CAF9}"
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding TotalIncomes, StringFormat='${0:N2}'}" 
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"/>
                                </VerticalStackLayout>
                            </Frame>

                            <!-- Expenses Card -->
                            <Frame Grid.Column="1"
                                   BackgroundColor="{AppThemeBinding Light=#FFEBEE, Dark=#B71C1C}" 
                                   BorderColor="{AppThemeBinding Light=#F44336, Dark=#EF5350}"
                                   CornerRadius="8"
                                   Padding="12"
                                   HasShadow="False">
                                <VerticalStackLayout Spacing="4">
                                    <Label Text="Expenses" 
                                           FontSize="13"
                                           TextColor="{AppThemeBinding Light=#C62828, Dark=#FFCDD2}"
                                           HorizontalOptions="Center"/>
                                    <Label Text="{Binding TotalExpenses, StringFormat='${0:N2}'}" 
                                           FontSize="20"
                                           FontAttributes="Bold"
                                           HorizontalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#D32F2F, Dark=#EF5350}"/>
                                </VerticalStackLayout>
                            </Frame>
                        </Grid>
                    </VerticalStackLayout>
                </VerticalStackLayout>
            </Frame>


            <!-- Action Buttons -->
            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                <Button Grid.Column="0" 
                        Text="ðŸ’° Add Income" 
                        Command="{Binding AddIncomeCommand}"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"
                        BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                        TextColor="White"/>
                <Button Grid.Column="1" 
                        Text="ðŸ’¸ Add Expense" 
                        Command="{Binding AddExpenseCommand}"
                        FontSize="16"
                        FontAttributes="Bold"
                        HeightRequest="50"
                        CornerRadius="12"
                        BackgroundColor="{AppThemeBinding Light=#D32F2F, Dark=#EF5350}"
                        TextColor="White"/>
            </Grid>


            <!-- Transaction List Header -->
            <Grid ColumnDefinitions="Auto,*,Auto" ColumnSpacing="8" Margin="0,8,0,0">
                <Label Grid.Column="0" 
                       Text="Transactions" 
                       FontSize="20" 
                       FontAttributes="Bold"
                       VerticalOptions="Center"/>
                <Button Grid.Column="1"
                        Text="{Binding IsGroupedByCategory, Converter={StaticResource BoolToGroupTextConverter}}"
                        Command="{Binding ToggleGroupingCommand}"
                        HorizontalOptions="Center"
                        FontSize="13"
                        Padding="12,8"
                        HeightRequest="40"
                        CornerRadius="8"
                        BackgroundColor="{AppThemeBinding Light=#FF9800, Dark=#FFB74D}"
                        TextColor="White"/>
                <Button Grid.Column="2"
                        Text="{Binding IsAscending, Converter={StaticResource BoolToSortTextConverter}}"
                        Command="{Binding ToggleSortOrderCommand}"
                        HorizontalOptions="End"
                        FontSize="13"
                        Padding="12,8"
                        HeightRequest="40"
                        CornerRadius="8"
                        BackgroundColor="{AppThemeBinding Light=#9E9E9E, Dark=#757575}"
                        TextColor="White"/>
            </Grid>


            <!-- Ungrouped Transactions List -->
            <ContentView IsVisible="{Binding IsGroupedByCategory, Converter={StaticResource InvertedBoolConverter}}">
                <CollectionView ItemsSource="{Binding Transactions}">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Padding="40" Spacing="12" HorizontalOptions="Center">
                            <Label Text="ðŸ“Š" 
                                   FontSize="48" 
                                   HorizontalOptions="Center"/>
                            <Label Text="No transactions yet" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                            <Label Text="Start tracking your finances by adding your first transaction" 
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light=#999999, Dark=#888888}"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Transaction">
                            <Frame Margin="0,6" 
                                   Padding="16"
                                   BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                                   BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                                   CornerRadius="12"
                                   HasShadow="False">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto,Auto" RowSpacing="8">
                                    <!-- Row 0: Date and Amount -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Date, StringFormat='{0:MMM dd, yyyy}'}"
                                           FontSize="13"
                                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                    
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Amount, StringFormat='${0:N2}'}"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           TextColor="{Binding Type, Converter={StaticResource TransactionTypeToColorConverter}}"/>
                                    
                                    <!-- Row 1: Description -->
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding Description}"
                                           FontSize="17"
                                           FontAttributes="Bold"
                                           LineBreakMode="TailTruncation"/>
                                    
                                    <!-- Row 2: Category -->
                                    <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" Spacing="6">
                                        <Label Text="ðŸ“" FontSize="12"/>
                                        <Label Text="{Binding CategoryName}"
                                               FontSize="13"
                                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                    </HorizontalStackLayout>
                                    
                                    <!-- Row 3: Action Buttons -->
                                    <HorizontalStackLayout Grid.Row="3" Grid.Column="0" Grid.ColumnSpan="2" 
                                                          Spacing="12" 
                                                          HorizontalOptions="End"
                                                          Margin="0,8,0,0">
                                        <Button Text="âœï¸ Edit"
                                                FontSize="14"
                                                HeightRequest="36"
                                                Padding="16,0"
                                                CornerRadius="8"
                                                BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                                TextColor="White"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=EditTransactionCommand}"
                                                CommandParameter="{Binding .}"/>
                                        <Button Text="ðŸ—‘ï¸ Delete"
                                                FontSize="14"
                                                HeightRequest="36"
                                                Padding="16,0"
                                                CornerRadius="8"
                                                BackgroundColor="{AppThemeBinding Light=#D32F2F, Dark=#EF5350}"
                                                TextColor="White"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=DeleteTransactionCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ContentView>


            <!-- Grouped Transactions List -->
            <ContentView IsVisible="{Binding IsGroupedByCategory}">
                <CollectionView ItemsSource="{Binding GroupedTransactions}"
                               IsGrouped="True">
                    <CollectionView.EmptyView>
                        <VerticalStackLayout Padding="40" Spacing="12" HorizontalOptions="Center">
                            <Label Text="ðŸ“Š" 
                                   FontSize="48" 
                                   HorizontalOptions="Center"/>
                            <Label Text="No transactions yet" 
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   HorizontalOptions="Center"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                            <Label Text="Start tracking your finances by adding your first transaction" 
                                   FontSize="14"
                                   HorizontalOptions="Center"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light=#999999, Dark=#888888}"/>
                        </VerticalStackLayout>
                    </CollectionView.EmptyView>
                    <CollectionView.GroupHeaderTemplate>
                        <DataTemplate x:DataType="models:TransactionGroup">
                            <Frame Margin="0,12,0,6"
                                   Padding="16"
                                   BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#0D47A1}"
                                   BorderColor="{AppThemeBinding Light=#2196F3, Dark=#64B5F6}"
                                   CornerRadius="12"
                                   HasShadow="True">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="4">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding CategoryName}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           TextColor="{AppThemeBinding Light=#1565C0, Dark=#90CAF9}"/>
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Total, StringFormat='${0:N2}'}"
                                           FontSize="22"
                                           FontAttributes="Bold"
                                           VerticalOptions="Center"
                                           TextColor="{Binding Type, Converter={StaticResource TransactionTypeToColorConverter}}"/>
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding TransactionCount, StringFormat='{0} transactions'}"
                                           FontSize="13"
                                           TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"/>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.GroupHeaderTemplate>
                    <CollectionView.ItemTemplate>
                        <DataTemplate x:DataType="models:Transaction">
                            <Frame Margin="16,6,0,6" 
                                   Padding="14"
                                   BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                                   BackgroundColor="{AppThemeBinding Light=#FAFAFA, Dark=#252525}"
                                   CornerRadius="10"
                                   HasShadow="False">
                                <Grid ColumnDefinitions="*,Auto" RowDefinitions="Auto,Auto,Auto" RowSpacing="6">
                                    <!-- Row 0: Date and Amount -->
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Date, StringFormat='{0:MMM dd, yyyy}'}"
                                           FontSize="13"
                                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                    
                                    <Label Grid.Row="0" Grid.Column="1"
                                           Text="{Binding Amount, StringFormat='${0:N2}'}"
                                           FontSize="18"
                                           FontAttributes="Bold"
                                           TextColor="{Binding Type, Converter={StaticResource TransactionTypeToColorConverter}}"/>
                                    
                                    <!-- Row 1: Description -->
                                    <Label Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2"
                                           Text="{Binding Description}"
                                           FontSize="15"
                                           LineBreakMode="TailTruncation"/>
                                    
                                    <!-- Row 2: Action Buttons -->
                                    <HorizontalStackLayout Grid.Row="2" Grid.Column="0" Grid.ColumnSpan="2" 
                                                          Spacing="10" 
                                                          HorizontalOptions="End"
                                                          Margin="0,6,0,0">
                                        <Button Text="âœï¸ Edit"
                                                FontSize="13"
                                                HeightRequest="32"
                                                Padding="12,0"
                                                CornerRadius="6"
                                                BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                                TextColor="White"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=EditTransactionCommand}"
                                                CommandParameter="{Binding .}"/>
                                        <Button Text="ðŸ—‘ï¸ Delete"
                                                FontSize="13"
                                                HeightRequest="32"
                                                Padding="12,0"
                                                CornerRadius="6"
                                                BackgroundColor="{AppThemeBinding Light=#D32F2F, Dark=#EF5350}"
                                                TextColor="White"
                                                Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:MainViewModel}}, Path=DeleteTransactionCommand}"
                                                CommandParameter="{Binding .}"/>
                                    </HorizontalStackLayout>
                                </Grid>
                            </Frame>
                        </DataTemplate>
                    </CollectionView.ItemTemplate>
                </CollectionView>
            </ContentView>

        </VerticalStackLayout>
    </ScrollView>
    </RefreshView>

</ContentPage>
