<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MoneyRecord.ViewModels"
             xmlns:models="clr-namespace:MoneyRecord.Models"
             xmlns:ext="clr-namespace:MoneyRecord.Extensions"
             xmlns:controls="clr-namespace:MoneyRecord.Controls"
             xmlns:behaviors="clr-namespace:MoneyRecord.Behaviors"
             x:Class="MoneyRecord.Views.BudgetPage"
             x:DataType="viewmodels:BudgetViewModel"
             Title="{ext:Localize BudgetMode}">

    <Grid>
        <RefreshView IsRefreshing="{Binding IsLoading}"
                     Command="{Binding LoadBudgetsCommand}">
            <ScrollView>
                <VerticalStackLayout Padding="16" Spacing="16">

                    <!-- Period Selector Section -->
                    <Frame BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                           BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#3A3A3A}"
                           CornerRadius="12"
                           Padding="16"
                           HasShadow="True">
                        <VerticalStackLayout Spacing="12">
                            <Label Text="{ext:Localize SelectPeriod}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>

                            <Picker ItemsSource="{Binding Periods}"
                                    SelectedItem="{Binding SelectedPeriod}"
                                    Title="{ext:Localize SelectPeriod}"
                                    FontSize="16"
                                    MinimumHeightRequest="44"
                                    HorizontalOptions="FillAndExpand"
                                    BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"/>

                            <!-- Custom Date Range -->
                            <VerticalStackLayout Spacing="12"
                                                IsVisible="{Binding IsCustomPeriodSelected}">
                                <Grid ColumnDefinitions="Auto,*"
                                      RowDefinitions="Auto,Auto"
                                      ColumnSpacing="12"
                                      RowSpacing="12">
                                    <Label Grid.Row="0" Grid.Column="0"
                                           Text="{ext:Localize From}"
                                           FontSize="16"
                                           VerticalOptions="Center"/>
                                    <DatePicker Grid.Row="0" Grid.Column="1"
                                               Date="{Binding CustomStartDate}"
                                               Format="MMM dd, yyyy"
                                               FontSize="16"
                                               MinimumHeightRequest="44"
                                               BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"/>

                                    <Label Grid.Row="1" Grid.Column="0"
                                           Text="{ext:Localize To}"
                                           FontSize="16"
                                           VerticalOptions="Center"/>
                                    <DatePicker Grid.Row="1" Grid.Column="1"
                                               Date="{Binding CustomEndDate}"
                                               Format="MMM dd, yyyy"
                                               FontSize="16"
                                               MinimumHeightRequest="44"
                                               BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}"/>
                                </Grid>
                            </VerticalStackLayout>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Summary Section -->
                    <Frame BackgroundColor="{AppThemeBinding Light=#E3F2FD, Dark=#1565C0}"
                           BorderColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                           CornerRadius="12"
                           Padding="16"
                           HasShadow="True"
                           IsVisible="{Binding HasBudgets}">
                        <Grid ColumnDefinitions="*,*,*" RowDefinitions="Auto,Auto" ColumnSpacing="8" RowSpacing="8">
                            <Label Grid.Row="0" Grid.Column="0"
                                   Text="{ext:Localize TotalBudgeted}"
                                   FontSize="12"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light=#1565C0, Dark=#BBDEFB}"/>
                            <Label Grid.Row="1" Grid.Column="0"
                                   Text="{Binding TotalBudgeted, StringFormat='${0:N2}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light=#1976D2, Dark=#FFFFFF}"/>

                            <Label Grid.Row="0" Grid.Column="1"
                                   Text="{ext:Localize TotalSpent}"
                                   FontSize="12"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light=#1565C0, Dark=#BBDEFB}"/>
                            <Label Grid.Row="1" Grid.Column="1"
                                   Text="{Binding TotalSpent, StringFormat='${0:N2}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light=#D32F2F, Dark=#EF5350}"/>

                            <Label Grid.Row="0" Grid.Column="2"
                                   Text="{ext:Localize TotalRemaining}"
                                   FontSize="12"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light=#1565C0, Dark=#BBDEFB}"/>
                            <Label Grid.Row="1" Grid.Column="2"
                                   Text="{Binding TotalRemaining, StringFormat='${0:N2}'}"
                                   FontSize="16"
                                   FontAttributes="Bold"
                                   HorizontalTextAlignment="Center"
                                   TextColor="{AppThemeBinding Light=#2E7D32, Dark=#66BB6A}"/>
                        </Grid>
                    </Frame>

                    <!-- Add Budget Button -->
                    <Button Text="{ext:Localize AddCategoryToBudget}"
                            Command="{Binding ShowAddFormCommand}"
                            IsVisible="{Binding IsAddFormVisible, Converter={StaticResource InvertedBoolConverter}}"
                            BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                            TextColor="White"
                            FontSize="16"
                            HeightRequest="50"
                            CornerRadius="12"/>

                    <!-- Add Budget Form -->
                    <Frame BackgroundColor="{AppThemeBinding Light=#FFF8E1, Dark=#3D3D1F}"
                           BorderColor="{AppThemeBinding Light=#FFD54F, Dark=#FFD54F}"
                           CornerRadius="12"
                           Padding="16"
                           IsVisible="{Binding IsAddFormVisible}">
                        <VerticalStackLayout Spacing="16">
                            <Label Text="{ext:Localize AddCategoryToBudget}"
                                   FontSize="18"
                                   FontAttributes="Bold"
                                   TextColor="{AppThemeBinding Light=#F57F17, Dark=#FFD54F}"/>

                            <Label Text="{ext:Localize SelectCategory}"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                            <Picker ItemsSource="{Binding AvailableCategories}"
                                    SelectedItem="{Binding SelectedCategory}"
                                    ItemDisplayBinding="{Binding Name}"
                                    Title="{ext:Localize SelectCategory}"
                                    FontSize="16"
                                    MinimumHeightRequest="44"
                                    BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#2D2D2D}"/>

                            <Label Text="{ext:Localize BudgetLimit}"
                                   FontSize="14"
                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                            <controls:DecimalEntry Text="{Binding BudgetAmount}"
                                                   Placeholder="0.00"
                                                   PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#888888}"
                                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                                                   BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                                                   FontSize="16">
                                <controls:DecimalEntry.Behaviors>
                                    <behaviors:CurrencyMaskBehavior ShowCurrencySymbol="True" DecimalPlaces="2"/>
                                </controls:DecimalEntry.Behaviors>
                            </controls:DecimalEntry>

                            <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                                <Button Grid.Column="0"
                                        Text="{ext:Localize Cancel}"
                                        Command="{Binding CancelAddFormCommand}"
                                        BackgroundColor="{AppThemeBinding Light=#757575, Dark=#616161}"
                                        TextColor="White"
                                        HeightRequest="44"
                                        CornerRadius="8"/>
                                <Button Grid.Column="1"
                                        Text="{ext:Localize AddBudgetButton}"
                                        Command="{Binding AddBudgetCommand}"
                                        BackgroundColor="{AppThemeBinding Light=#2E7D32, Dark=#66BB6A}"
                                        TextColor="White"
                                        HeightRequest="44"
                                        CornerRadius="8"/>
                            </Grid>
                        </VerticalStackLayout>
                    </Frame>

                    <!-- Budget List Header -->
                    <Label Text="{ext:Localize YourBudgets}"
                           FontSize="20"
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                           IsVisible="{Binding HasBudgets}"/>

                    <!-- Budget Progress Cards -->
                    <CollectionView ItemsSource="{Binding Budgets}"
                                    IsVisible="{Binding HasBudgets}">
                        <CollectionView.ItemTemplate>
                            <DataTemplate x:DataType="models:BudgetProgress">
                                <Frame Margin="0,6"
                                       Padding="16"
                                       BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                                       BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                                       CornerRadius="12"
                                       HasShadow="True">
                                    <VerticalStackLayout Spacing="12">
                                        <!-- Category Header -->
                                        <Grid ColumnDefinitions="Auto,*,Auto,Auto" ColumnSpacing="12">
                                            <Label Grid.Column="0"
                                                   Text="{Binding DisplayIcon}"
                                                   FontFamily="MaterialDesignIcons"
                                                   FontSize="28"
                                                   VerticalOptions="Center"
                                                   TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"/>
                                            <Label Grid.Column="1"
                                                   Text="{Binding CategoryName}"
                                                   FontSize="18"
                                                   FontAttributes="Bold"
                                                   VerticalOptions="Center"
                                                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
                                            <Button Grid.Column="2"
                                                    Text="&#xF03EB;"
                                                    FontFamily="MaterialDesignIcons"
                                                    FontSize="20"
                                                    BackgroundColor="Transparent"
                                                    TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                                    HeightRequest="40"
                                                    WidthRequest="40"
                                                    Padding="0"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BudgetViewModel}}, Path=EditBudgetCommand}"
                                                    CommandParameter="{Binding .}"/>
                                            <Button Grid.Column="3"
                                                    Text="&#xF01B4;"
                                                    FontFamily="MaterialDesignIcons"
                                                    FontSize="20"
                                                    BackgroundColor="Transparent"
                                                    TextColor="{AppThemeBinding Light=#D32F2F, Dark=#EF5350}"
                                                    HeightRequest="40"
                                                    WidthRequest="40"
                                                    Padding="0"
                                                    Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:BudgetViewModel}}, Path=DeleteBudgetCommand}"
                                                    CommandParameter="{Binding .}"/>
                                        </Grid>

                                        <!-- Progress Bar -->
                                        <Grid RowDefinitions="Auto,Auto" RowSpacing="4">
                                            <ProgressBar Grid.Row="0"
                                                        Progress="{Binding ProgressPercentage, Converter={StaticResource PercentageToProgressConverter}}"
                                                        ProgressColor="{Binding ProgressColor}"
                                                        BackgroundColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                                                        HeightRequest="12"/>
                                            <Label Grid.Row="1"
                                                   FontSize="12"
                                                   HorizontalTextAlignment="End"
                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}">
                                                <Label.Text>
                                                    <Binding Path="ProgressPercentage" StringFormat="{}{0:N1}%"/>
                                                </Label.Text>
                                            </Label>
                                        </Grid>

                                        <!-- Amount Details -->
                                        <Grid ColumnDefinitions="*,*" RowDefinitions="Auto,Auto" RowSpacing="4" ColumnSpacing="12">
                                            <Label Grid.Row="0" Grid.Column="0"
                                                   Text="{ext:Localize Spent}"
                                                   FontSize="12"
                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                            <Label Grid.Row="1" Grid.Column="0"
                                                   Text="{Binding SpentAmount, StringFormat='${0:N2}'}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   TextColor="{AppThemeBinding Light=#D32F2F, Dark=#EF5350}"/>

                                            <Label Grid.Row="0" Grid.Column="1"
                                                   Text="{ext:Localize BudgetLimit}"
                                                   FontSize="12"
                                                   HorizontalTextAlignment="End"
                                                   TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                                            <Label Grid.Row="1" Grid.Column="1"
                                                   Text="{Binding LimitAmount, StringFormat='${0:N2}'}"
                                                   FontSize="16"
                                                   FontAttributes="Bold"
                                                   HorizontalTextAlignment="End"
                                                   TextColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"/>
                                        </Grid>

                                        <!-- Remaining or Exceeded -->
                                        <Frame Padding="12"
                                               CornerRadius="8"
                                               HasShadow="False"
                                               BackgroundColor="{Binding IsOverBudget, Converter={StaticResource BoolToOverBudgetColorConverter}}"
                                               BorderColor="{Binding IsOverBudget, Converter={StaticResource BoolToOverBudgetBorderConverter}}">
                                            <Grid ColumnDefinitions="Auto,*,Auto">
                                                <Label Grid.Column="0"
                                                       Text="{Binding IsOverBudget, Converter={StaticResource BoolToOverBudgetIconConverter}}"
                                                       FontFamily="MaterialDesignIcons"
                                                       FontSize="20"
                                                       VerticalOptions="Center"
                                                       TextColor="{Binding IsOverBudget, Converter={StaticResource BoolToOverBudgetTextColorConverter}}"/>
                                                <Label Grid.Column="1"
                                                       Text="{Binding IsOverBudget, Converter={StaticResource BoolToOverBudgetLabelConverter}}"
                                                       FontSize="14"
                                                       VerticalOptions="Center"
                                                       Margin="8,0,0,0"
                                                       TextColor="{Binding IsOverBudget, Converter={StaticResource BoolToOverBudgetTextColorConverter}}"/>
                                                <Label Grid.Column="2"
                                                       FontSize="16"
                                                       FontAttributes="Bold"
                                                       VerticalOptions="Center"
                                                       TextColor="{Binding IsOverBudget, Converter={StaticResource BoolToOverBudgetTextColorConverter}}">
                                                    <Label.Text>
                                                        <MultiBinding Converter="{StaticResource OverBudgetAmountConverter}">
                                                            <Binding Path="IsOverBudget"/>
                                                            <Binding Path="ExceededAmount"/>
                                                            <Binding Path="RemainingAmount"/>
                                                        </MultiBinding>
                                                    </Label.Text>
                                                </Label>
                                            </Grid>
                                        </Frame>
                                    </VerticalStackLayout>
                                </Frame>
                            </DataTemplate>
                        </CollectionView.ItemTemplate>
                    </CollectionView>

                    <!-- Empty State -->
                    <VerticalStackLayout Spacing="16"
                                        Padding="40"
                                        IsVisible="{Binding HasBudgets, Converter={StaticResource InvertedBoolConverter}}">
                        <Label Text="&#xF117F;"
                               FontFamily="MaterialDesignIcons"
                               FontSize="64"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                        <Label Text="{ext:Localize NoBudgetsYet}"
                               FontSize="18"
                               FontAttributes="Bold"
                               HorizontalTextAlignment="Center"
                               TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
                        <Label Text="{ext:Localize AddBudgetToStart}"
                               FontSize="14"
                               HorizontalTextAlignment="Center"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    </VerticalStackLayout>

                </VerticalStackLayout>
            </ScrollView>
        </RefreshView>

        <!-- Floating Action Menu -->
        <controls:FloatingActionMenu />
    </Grid>

</ContentPage>
