<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewmodels="clr-namespace:MoneyRecord.ViewModels"
             xmlns:models="clr-namespace:MoneyRecord.Models"
             xmlns:converters="clr-namespace:MoneyRecord.Converters"
             xmlns:behaviors="clr-namespace:MoneyRecord.Behaviors"
             xmlns:ext="clr-namespace:MoneyRecord.Extensions"
             x:Class="MoneyRecord.Views.ManageAccountsPage"
             x:DataType="viewmodels:ManageAccountsViewModel"
             Title="{ext:Localize ManageAccounts}">

    <ContentPage.Resources>
        <converters:InvertedBoolConverter x:Key="InvertedBoolConverter"/>
    </ContentPage.Resources>

    <ScrollView>
        <VerticalStackLayout Padding="20" Spacing="20">

            <!-- Add Account Section -->
            <Frame BackgroundColor="{AppThemeBinding Light=#F5F5F5, Dark=#2D2D2D}" 
                   BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                   CornerRadius="12"
                   Padding="16"
                   IsVisible="{Binding IsEditMode, Converter={StaticResource InvertedBoolConverter}}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="{ext:Localize AddNewAccount}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
                    
                    <Label Text="{ext:Localize AccountName}" FontSize="14" TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    <Entry Text="{Binding NewAccountName}" 
                           Placeholder="{ext:Localize AccountNamePlaceholder}"
                           PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#888888}"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                           BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                           FontSize="16"/>
                    
                    <Label Text="{ext:Localize InitialBalance}" FontSize="14" TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    <Entry Text="{Binding NewAccountBalance}" 
                           Placeholder="0.00"
                           Keyboard="Numeric"
                           PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#888888}"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                           BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                           FontSize="16">
                        <Entry.Behaviors>
                            <behaviors:CurrencyMaskBehavior ShowCurrencySymbol="True" DecimalPlaces="2"/>
                        </Entry.Behaviors>
                    </Entry>

                    <!-- Icon Selector for Add -->
                    <Label Text="{ext:Localize SelectIcon}" 
                           FontSize="14" 
                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                           Margin="0,4,0,0"/>
                    <FlexLayout Wrap="Wrap" 
                                JustifyContent="Start" 
                                AlignItems="Center"
                                BindableLayout.ItemsSource="{Binding AvailableIcons}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:AccountIcon">
                                <Border StrokeThickness="3"
                                        Padding="10"
                                        Margin="4"
                                        WidthRequest="52"
                                        HeightRequest="52"
                                        StrokeShape="RoundRectangle 10">
                                    <Border.Stroke>
                                        <SolidColorBrush Color="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"/>
                                    </Border.Stroke>
                                    <Border.BackgroundColor>
                                        <Binding Path="IsSelected">
                                            <Binding.Converter>
                                                <converters:BoolToSelectedBackgroundConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Border.BackgroundColor>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ManageAccountsViewModel}}, Path=SelectNewIconCommand}"
                                            CommandParameter="{Binding Code}"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="{Binding DisplayIcon}"
                                           FontFamily="MaterialDesignIcons"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           TextColor="{Binding IsSelected, Converter={StaticResource BoolToIconColorConverter}}"/>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>

                    <!-- Allow Negative Balance Checkbox -->
                    <HorizontalStackLayout Spacing="8" Margin="0,8,0,0">
                        <CheckBox IsChecked="{Binding NewAccountAllowNegativeBalance}" 
                                  Color="{AppThemeBinding Light=#2E7D32, Dark=#66BB6A}"/>
                        <Label Text="{ext:Localize AllowNegativeBalance}" 
                               FontSize="14" 
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    </HorizontalStackLayout>
                    
                    <Button Text="{ext:Localize AddAccountButton}" 
                           Command="{Binding AddAccountCommand}"
                           HeightRequest="44"
                           CornerRadius="8"
                           FontSize="16"
                           BackgroundColor="{AppThemeBinding Light=#2E7D32, Dark=#66BB6A}"
                           TextColor="White"/>
                </VerticalStackLayout>
            </Frame>

            <!-- Edit Account Section -->
            <Frame BackgroundColor="{AppThemeBinding Light=#FFF8E1, Dark=#3D3D1F}" 
                   BorderColor="{AppThemeBinding Light=#FFD54F, Dark=#FFD54F}"
                   CornerRadius="12"
                   Padding="16"
                   IsVisible="{Binding IsEditMode}">
                <VerticalStackLayout Spacing="12">
                    <Label Text="{ext:Localize EditAccount}" 
                           FontSize="18" 
                           FontAttributes="Bold"
                           TextColor="{AppThemeBinding Light=#F57F17, Dark=#FFD54F}"/>
                    
                    <Label Text="{ext:Localize AccountName}" FontSize="14" TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    <Entry Text="{Binding EditAccountName}" 
                           Placeholder="Account name"
                           PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#888888}"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                           BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                           FontSize="16"/>
                    
                    <Label Text="Initial Balance" FontSize="14" TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    <Entry Text="{Binding EditAccountBalance}" 
                           Placeholder="0.00"
                           Keyboard="Numeric"
                           PlaceholderColor="{AppThemeBinding Light=#999999, Dark=#888888}"
                           TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                           BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                           FontSize="16">
                        <Entry.Behaviors>
                            <behaviors:CurrencyMaskBehavior ShowCurrencySymbol="True" DecimalPlaces="2"/>
                        </Entry.Behaviors>
                    </Entry>

                    <!-- Icon Selector for Edit -->
                    <Label Text="{ext:Localize SelectIcon}" 
                           FontSize="14" 
                           TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                           Margin="0,4,0,0"/>
                    <FlexLayout Wrap="Wrap" 
                                JustifyContent="Start" 
                                AlignItems="Center"
                                BindableLayout.ItemsSource="{Binding AvailableIcons}">
                        <BindableLayout.ItemTemplate>
                            <DataTemplate x:DataType="models:AccountIcon">
                                <Border StrokeThickness="3"
                                        Padding="10"
                                        Margin="4"
                                        WidthRequest="52"
                                        HeightRequest="52"
                                        StrokeShape="RoundRectangle 10">
                                    <Border.Stroke>
                                        <SolidColorBrush Color="{Binding IsSelected, Converter={StaticResource BoolToColorConverter}}"/>
                                    </Border.Stroke>
                                    <Border.BackgroundColor>
                                        <Binding Path="IsSelected">
                                            <Binding.Converter>
                                                <converters:BoolToSelectedBackgroundConverter/>
                                            </Binding.Converter>
                                        </Binding>
                                    </Border.BackgroundColor>
                                    <Border.GestureRecognizers>
                                        <TapGestureRecognizer 
                                            Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ManageAccountsViewModel}}, Path=SelectEditIconCommand}"
                                            CommandParameter="{Binding Code}"/>
                                    </Border.GestureRecognizers>
                                    <Label Text="{Binding DisplayIcon}"
                                           FontFamily="MaterialDesignIcons"
                                           FontSize="24"
                                           HorizontalOptions="Center"
                                           VerticalOptions="Center"
                                           TextColor="{Binding IsSelected, Converter={StaticResource BoolToIconColorConverter}}"/>
                                </Border>
                            </DataTemplate>
                        </BindableLayout.ItemTemplate>
                    </FlexLayout>

                    <!-- Allow Negative Balance Checkbox -->
                    <HorizontalStackLayout Spacing="8" Margin="0,8,0,0">
                        <CheckBox IsChecked="{Binding EditAccountAllowNegativeBalance}" 
                                  Color="{AppThemeBinding Light=#F57F17, Dark=#FFD54F}"/>
                        <Label Text="{ext:Localize AllowNegativeBalance}" 
                               FontSize="14" 
                               VerticalOptions="Center"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    </HorizontalStackLayout>
                    
                    <Grid ColumnDefinitions="*,*" ColumnSpacing="12">
                        <Button Grid.Column="0"
                               Text="{ext:Localize Cancel}" 
                               Command="{Binding CancelEditCommand}"
                               HeightRequest="44"
                               CornerRadius="8"
                               FontSize="16"
                               BackgroundColor="{AppThemeBinding Light=#757575, Dark=#616161}"
                               TextColor="White"/>
                        <Button Grid.Column="1"
                               Text="{ext:Localize Save}" 
                               Command="{Binding SaveEditCommand}"
                               HeightRequest="44"
                               CornerRadius="8"
                               FontSize="16"
                               BackgroundColor="{AppThemeBinding Light=#2E7D32, Dark=#66BB6A}"
                               TextColor="White"/>
                    </Grid>
                </VerticalStackLayout>
            </Frame>

            <!-- Accounts List Header -->
            <Label Text="Your Accounts" 
                   FontSize="20" 
                   FontAttributes="Bold"
                   TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"/>
            
            <!-- Accounts List -->
            <CollectionView ItemsSource="{Binding Accounts}">
                <CollectionView.EmptyView>
                    <VerticalStackLayout Padding="40" Spacing="12" HorizontalOptions="Center">
                        <Label Text="ðŸ¦" 
                               FontSize="48" 
                               HorizontalOptions="Center"/>
                        <Label Text="No accounts yet" 
                               FontSize="16"
                               HorizontalOptions="Center"
                               TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"/>
                    </VerticalStackLayout>
                </CollectionView.EmptyView>
                <CollectionView.ItemTemplate>
                    <DataTemplate x:DataType="models:Account">
                        <Frame Margin="0,6" 
                               Padding="16"
                               BackgroundColor="{AppThemeBinding Light=#FFFFFF, Dark=#1E1E1E}"
                               BorderColor="{AppThemeBinding Light=#E0E0E0, Dark=#404040}"
                               CornerRadius="10"
                               HasShadow="False">
                            <Grid ColumnDefinitions="Auto,*,Auto,Auto" RowDefinitions="Auto,Auto" ColumnSpacing="12" RowSpacing="4">
                                <!-- Account Icon -->
                                <Label Grid.Row="0" Grid.RowSpan="2" Grid.Column="0"
                                       Text="{Binding DisplayIcon}"
                                       FontFamily="MaterialDesignIcons"
                                       FontSize="28"
                                       VerticalOptions="Center"
                                       TextColor="{AppThemeBinding Light=#1976D2, Dark=#64B5F6}"/>
                                
                                <Label Grid.Row="0" Grid.Column="1"
                                       Text="{Binding Name}" 
                                       FontSize="16"
                                       FontAttributes="Bold"
                                       TextColor="{AppThemeBinding Light=#333333, Dark=#FFFFFF}"
                                       VerticalOptions="Center"/>
                                
                                <Label Grid.Row="1" Grid.Column="1"
                                       Text="{Binding InitialBalance, StringFormat='Initial: ${0:N2}'}" 
                                       FontSize="13"
                                       TextColor="{AppThemeBinding Light=#666666, Dark=#AAAAAA}"
                                       VerticalOptions="Center"/>
                                
                                <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="2"
                                        Text="âœï¸ Edit"
                                        FontSize="13"
                                        HeightRequest="36"
                                        Padding="12,0"
                                        BackgroundColor="{AppThemeBinding Light=#1976D2, Dark=#42A5F5}"
                                        TextColor="White"
                                        CornerRadius="6"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ManageAccountsViewModel}}, Path=EditAccountCommand}"
                                        CommandParameter="{Binding .}"/>
                                
                                <Button Grid.Row="0" Grid.RowSpan="2" Grid.Column="3"
                                        Text="ðŸ—‘ï¸ Delete"
                                        FontSize="13"
                                        HeightRequest="36"
                                        Padding="12,0"
                                        BackgroundColor="{AppThemeBinding Light=#D32F2F, Dark=#EF5350}"
                                        TextColor="White"
                                        CornerRadius="6"
                                        IsVisible="{Binding IsDefault, Converter={StaticResource InvertedBoolConverter}}"
                                        Command="{Binding Source={RelativeSource AncestorType={x:Type viewmodels:ManageAccountsViewModel}}, Path=DeleteAccountCommand}"
                                        CommandParameter="{Binding .}"/>
                            </Grid>
                        </Frame>
                    </DataTemplate>
                </CollectionView.ItemTemplate>
            </CollectionView>

        </VerticalStackLayout>
    </ScrollView>

</ContentPage>
